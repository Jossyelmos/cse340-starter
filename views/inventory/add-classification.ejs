<% if (title) { %>
    <h1><%= title %></h1>
  <% } else { %>
    <h1>Oops! Something went wrong</h1>
<% } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form action="/inv/add-classification" method="post">
  <label for="classification_name">
    Classification Name (letters and numbers only)
  </label>

  <input
    type="text"
    id="classification_name"
    name="classification_name"
    pattern="^[A-Za-z0-9]+$"
    title="No spaces or special characters allowed"
    required
  >

  <button type="submit">Add Classification</button>
</form>
